@page
@model SignalRAssignment.Pages.Login.IndexModel
@{
    Layout = "~/Pages/Shared/_HomeLayout.cshtml";
}

@if (ViewBag.AlertMessage != null)
{
    <div class="navbar navbar-fixed-top">
        <div class="alert alert-danger navbar navbar-fixed-top" role="alert">
            <div data-dismiss="alert" aria-label="Close"></div>
            <strong>Fail!</strong> @ViewBag.AlertMessage
        </div>

    </div>
}

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="text-danger" asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label class="control-label">User Name</label>
                <input asp-for="USName" type="text" class="form-control" />
                <span class="text-danger" asp-validation-for="USName"></span>
            </div>

            <div class="form-group">
                <label class="control-label">Password</label>
                <input asp-for="Pwd" type="password" class="form-control" />
                <span class="text-danger" asp-validation-for="Pwd"></span>
            </div>

            <div class="form-group">
                <button type="submit" value="Login" class="btn btn-primary">Login</button>
            </div>
        </form>
    </div>
</div>

